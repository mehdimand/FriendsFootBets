<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slider"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bloc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="2dip"
            android:textColor="#5d5d5d"
            android:textSize="8sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/hteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="5dip"
                android:paddingTop="2dip"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ateam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="right"
                android:paddingBottom="2dip"
                android:paddingRight="10dip"
                android:paddingTop="2dip"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/heure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#5d5d5d"
            android:textSize="8sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/state"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_toRightOf="@id/bloc1"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/showhide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_toRightOf="@id/bloc1"
        android:layout_below="@id/state"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/tohide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bloc1"
        android:paddingLeft="50dip"
        android:paddingRight="50dip">

        <ListView
            android:id="@+id/bettersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/bettersList"
            app:srcCompat="@android:drawable/arrow_up_float"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/imageButton11"
            app:srcCompat="@android:drawable/arrow_down_float"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/parihome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_toRightOf="@id/imageButton11"
            android:layout_below="@id/bettersList"
            android:text="0"
            android:textSize="50sp"
            android:visibility="gone"/>



        <ImageButton
            android:id="@+id/imageButton21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bettersList"
            app:srcCompat="@android:drawable/arrow_up_float"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/pariaway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dip"
            android:layout_toLeftOf="@id/imageButton21"
            android:layout_below="@id/bettersList"
            android:text="0"
            android:textSize="50sp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/imageButton22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imageButton21"
            app:srcCompat="@android:drawable/arrow_down_float"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>